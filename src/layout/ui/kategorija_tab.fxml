<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<VBox fillWidth="false" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="layout.ui.controller.KategorijaTab">
    <children>
        <HBox spacing="15.0">
            <children>
                <Button mnemonicParsing="false" onAction="#dodaj_kategoriju" text="Dodaj">
                </Button>
                <TextField fx:id="search" prefWidth="200.0" promptText="naziv">
                </TextField>
            </children>
            <VBox.margin>
                <Insets left="10.0" />
            </VBox.margin>
            <padding>
                <Insets bottom="10.0" top="10.0" />
            </padding>
        </HBox>
        <TableView fx:id="kategorija">
            <columns>
                <TableColumn fx:id="naziv" maxWidth="200.0" minWidth="200.0" prefWidth="200.0" text="Kategorija" />
                <TableColumn fx:id="izmeni" maxWidth="75.0" minWidth="50.0" prefWidth="75.0" resizable="false" text="Izmeni" />
                <TableColumn fx:id="obrisi" maxWidth="75.0" minWidth="50.0" prefWidth="75.0" resizable="false" text="Obrisi" />
            </columns>
            <VBox.margin>
                <Insets left="10.0" />
            </VBox.margin>
        </TableView>
    </children>
</VBox>
