<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fillWidth="false" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="layout.ui.controller.Stolovi">
    <children>
        <HBox spacing="15.0">
            <children>
                <Button mnemonicParsing="false" onAction="#dodaj_sto" text="Dodaj">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
                <TextField fx:id="search" maxWidth="-Infinity" prefWidth="100.0" promptText="broj">
                    <font>
                        <Font size="14.0" />
                    </font>
                </TextField>
            </children>
            <VBox.margin>
                <Insets left="10.0" />
            </VBox.margin>
            <padding>
                <Insets bottom="10.0" top="10.0" />
            </padding>
        </HBox>
        <TableView fx:id="stolovi">
            <columns>
                <TableColumn fx:id="broj" maxWidth="100.0" prefWidth="100.0" text="Sto" />
                <TableColumn fx:id="izmeni" maxWidth="75.0" minWidth="50.0" prefWidth="75.0" resizable="false" text="Izmeni" />
                <TableColumn fx:id="obrisi" maxWidth="75.0" minWidth="50.0" prefWidth="75.0" resizable="false" text="Obrisi" />
            </columns>
            <VBox.margin>
                <Insets left="10.0" />
            </VBox.margin>
        </TableView>
    </children>
</VBox>
